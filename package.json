{
  "name": "swapy-exchange-electron",
  "productName": "Swapy Alpha",
  "version": "0.0.0",
  "license": "Copyright",
  "main": "main.js",
  "description": "Swapy Exchange Alpha Version",
  "homepage": "https://swapy.network",
  "scripts": {
    "ng": "ng",
    "start": "electron .",
    "build.linux": "ng build --prod && electron-packager . swapy-exchange-alpha --arch=x64 --platform=linux --overwrite --out installers/ --ignore=\\src/ --icon=./src/assets/img/s-exchange.png --asar",
    "build.windows": "ng build --prod && electron-packager . swapy-exchange-alpha --arch=x64 --platform=win32 --overwrite --out installers/ --ignore=\\src/ --asar --icon=./src/assets/img/s-exchange.ico",
    "build.mac": "ng build --prod && electron-packager . swapy-exchange-alpha --arch=x64 --platform=darwin --overwrite --out installers/ --ignore=\\src/ --icon=./src/assets/img/s-exchange.icns --asar",
    "deb64": "electron-installer-debian --config debian.json --arch amd64",
    "watch": "(ng build --watch &) && npm start",
    "alpha": "ng serve --env=prod --host 0.0.0.0 --disable-host-check",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "copy": "sh scripts/copy_contracts.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "4.3.0",
    "@angular/common": "4.3.0",
    "@angular/compiler": "4.3.0",
    "@angular/core": "4.3.0",
    "@angular/forms": "4.3.0",
    "@angular/http": "4.3.0",
    "@angular/platform-browser": "4.3.0",
    "@angular/platform-browser-dynamic": "4.3.0",
    "@angular/router": "4.3.0",
    "angular2-text-mask": "8.0.2",
    "bootstrap": "3.3.5",
    "core-js": "2.4.1",
    "dotenv": "^4.0.0",
    "electron-is-dev": "^0.3.0",
    "electron-store": "^1.3.0",
    "font-awesome": "4.7.0",
    "install": "^0.10.1",
    "ng2-toastr": "^4.1.2",
    "ngx-electron": "^1.0.3",
    "npm": "^5.4.2",
    "rxjs": "5.1.0",
    "sha1": "^1.1.1",
    "swarm-js": "^0.1.36",
    "text-mask-addons": "3.6.0",
    "web3": "^1.0.0-beta.17",
    "zone.js": "0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.4.2",
    "@angular/compiler-cli": "^4.3.0",
    "@angular/language-service": "^4.3.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.0.1",
    "debug": "^3.1.0",
    "electron": "^1.7.8",
    "electron-packager": "^9.1.0",
    "electron-reload": "^1.2.2",
    "electron-windows-installer": "1.7.8",
    "electron-winstaller": "^2.6.3",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "klaw": "^2.1.0",
    "protractor": "~5.1.2",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3",
    "uglify-js": "github:mishoo/UglifyJS2#harmony"
  }
}
